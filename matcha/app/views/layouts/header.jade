doctype html
html
  head
    title!= title
    
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
    link(href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')

  body
    div#login.modal
      div.modal-content
        h4.center Login
        br
        form
          div.input-field.row
            i.material-icons.prefix email
            input#email.validate(type="email")
            label(for="email") Email
          div.input-field.row
            i.material-icons.prefix lock
            input#password.validate(type="password")
            label(for="password") Password
      div.modal-footer
        a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href="#!") Connect
    nav.light-blue
      div.nav-wrapper.container
        a#logo-container.brand-logo Logo
        ul.right.hide-on-med-and-down
         li 
            a(onclick="$('#login').openModal();") Login
        ul#nav-mobile.side-nav
          li 
            a(onclick="$('.button-collapse').sideNav('hide'); $('#login').openModal();") Login
        a.button-collapse(href="#", data-activates="nav-mobile", style="color:white")
          i.material-icons menu
        

        if (flashMessage && flashMessage.length)
          div.row
            div.col-md-4.col-md-offset-4
              div.alert.alert-danger.text-center= flashMessage
