doctype html
html
  head
    title!= title
    
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
    link(href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')

  body
    div#forgot.modal
        div.modal-content
          row.section
            h4.center Password reset
            p We will send you a link to reset your password properly !
            form.col.s6(name="forgot", action="forgot", method="post")
              row
                div.input-field.row
                  input#email.validate(type="email")
                  label(for="email") Email
                div#login-button-panel.center
                  button.btn(submit="") Send
    div#login.modal
      div.modal-content
        row.section
          h4.center Login
          form.col.s6(name="signin", action="signin", method="post")
            row
              div.input-field.row
                input#email.validate(type="email")
                label(for="email") Email
              div.input-field.row
                input#password.validate(type="password")
                label(for="password") Password
              div#login-button-panel.center
                button.btn(submit="") Login
              div.section.center
                a(onclick="$('#forgot').openModal();") Forgot your password ?
    nav.light-blue
      div.nav-wrapper.container
        a#logo-container.brand-logo(href="/") Matcha
        ul.right.hide-on-med-and-down
         li 
            a(onclick="$('#login').openModal();") Login
            a(href="/signup") Signup
        ul#nav-mobile.side-nav
          li 
            a(onclick="$('.button-collapse').sideNav('hide'); $('#login').openModal();") Login
            a(href="/signup") Signup
        a.button-collapse(href="#", data-activates="nav-mobile", style="color:white")
          i.material-icons menu
        

        if (flashMessage && flashMessage.length)
          div.row
            div.col-md-4.col-md-offset-4
              div.alert.alert-danger.text-center= flashMessage
